{
  "manifest_version": 3,
  "name": "DDDDAO Auth Sync",
  "version": "1.3.0",
  "description": "Sync authentication cookies with DDDDAO platform",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "webRequest",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "*://*.binance.com/*",
    "*://*.suitechsui.online/*",
    "*://*.okx.com/*",
    "*://*.bitget.com/*",
    "*://*.bitgetapps.com/*",
    "*://*.bybit.com/*",
    "*://*.gate.com/*",
    "*://*.gate.io/*",
    "*://*.ddddao.top/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
